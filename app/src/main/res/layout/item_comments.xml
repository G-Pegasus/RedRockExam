<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_comments"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@mipmap/portrait"
        android:layout_marginTop="5dp"
        app:shapeAppearanceOverlay="@style/circleImageStyle"/>

    <TextView
        android:id="@+id/tv_comments_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_comments"
        android:textSize="16sp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        tools:text="可莉"/>

    <TextView
        android:id="@+id/tv_comments_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_comments"
        android:layout_below="@+id/tv_comments_name"
        android:paddingTop="5dp"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        tools:text="刘同骥爱可莉"/>

    <TextView
        android:id="@+id/tv_comments_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_toEndOf="@+id/iv_comments"
        android:layout_below="@+id/tv_comments_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        tools:text="2022/07/21"/>

</RelativeLayout>