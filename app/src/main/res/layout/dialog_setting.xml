<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_below="@+id/root_user"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/input_user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入昵称"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:paddingStart="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_edit_style"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/input_user_des"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入个签"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:paddingStart="12dp"
            android:layout_below="@+id/input_user_name"
            android:gravity="center_vertical"
            android:background="@drawable/shape_edit_style"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/root_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_user_des"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="取消"/>

            <TextView
                android:id="@+id/tv_sure_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="确定"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>